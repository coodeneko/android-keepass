<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="sans-serif"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/passwordVisibility"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:onClick="clickPasswordVisibility"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:src="@drawable/ic_eye_black_24dp" />

    <EditText
        android:id="@+id/keyFile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/password"
        android:layout_marginEnd="36dp"
        android:fontFamily="sans-serif"
        android:hint="@string/keeFileName"
        android:inputType="none" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/password"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:src="@drawable/ic_insert_drive_file_black_24dp" />

</RelativeLayout>