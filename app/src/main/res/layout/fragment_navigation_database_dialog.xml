<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joelkreutzwieser.apps.keepass.NavigationDataBaseSubFragment"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/addNew"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:onClick="clickNewDatabase">

        <ImageView
            android:id="@+id/addNewImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:src="@drawable/ic_database_black_24dp" />

        <TextView
            android:id="@+id/addNewText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/newDatabase"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigationDatabaseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
